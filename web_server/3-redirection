#!/usr/bin/env bash
# Install nginx and configure /redirect_me to respond with a 301 redirect

sudo apt-get update
sudo apt-get install -y nginx

# Create the homepage required by the task
echo "Holberton School" | sudo tee /var/www/html/index.html > /dev/null

# Insert redirect rule inside the default server block
sudo sed -i '/server_name _;/a \    rewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;' /etc/nginx/sites-available/default

sudo service nginx restart
